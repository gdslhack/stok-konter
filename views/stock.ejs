<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <h1><%= header %></h1>
    <nav>
      <a href="/">Home</a>
      <a href="/stock">Stock</a>
      <a href="/inventory">Inventory</a>
      <a href="/warnings">Warnings</a>
      <a href="/opname">Opname</a>
      <a href="/profit">Profit</a>
    </nav>
  </header>
  <main>
    <h2>Stock List</h2>
    <!-- Table for Stock Movements -->
    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Quantity</th>
          <th>Type</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% if (stocks && stocks.length > 0) { %>
          <% stocks.forEach(stock => { %>
            <tr>
              <td><%= stock.productId.name %></td>
              <td><%= stock.quantity %></td>
              <td><%= stock.type %></td>
              <td><%= stock.date.toDateString() %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4">No stock data available.</td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <!-- Table for Remaining Stock -->
    <h2>Remaining Stock</h2>
    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Stock In</th>
          <th>Stock Out</th>
          <th>Remaining Stock</th>
        </tr>
      </thead>
      <tbody>
        <% if (remainingStock && remainingStock.length > 0) { %>
          <% remainingStock.forEach(item => { %>
            <tr>
              <td><%= item.product.name %></td>
              <td><%= item.stockIn %></td>
              <td><%= item.stockOut %></td>
              <td><%= item.netStock %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4">No remaining stock data available.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </main>
</body>
</html>
